<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Patient_Profile"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="319dp"
        android:layout_height="247dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/patient" />

    <RelativeLayout
        android:layout_width="364dp"
        android:layout_height="68dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="260dp"

        android:layout_alignParentRight="true">

        <Button
            android:id="@+id/call"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_call_black_24dp"

            />

        <Button
            android:id="@+id/edit"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/call"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="119dp"
            android:layout_marginRight="119dp"
            android:drawableLeft="@drawable/ic_edit_black_24dp" />

        <Button
            android:id="@+id/location"
            android:layout_width="46dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/call"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="89dp"
            android:layout_marginLeft="89dp"
            android:layout_marginTop="0dp"
            android:drawableLeft="@drawable/ic_location_on_black_24dp" />

        <Button
            android:id="@+id/del"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/location"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="-1dp"
            android:layout_marginEnd="21dp"
            android:layout_marginRight="21dp"
            android:drawableLeft="@drawable/ic_delete_black_24dp" />


    </RelativeLayout>

    <TextView
        android:id="@+id/txtName"
        android:layout_width="294dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="27dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="340dp"
        android:layout_weight="0.03"
        android:background="#a4acad"
        android:backgroundTint="#c7e4e8"
        android:drawableLeft="@drawable/shape_02"
        android:drawablePadding="16dp"
        android:ems="10"
        android:hint="Patient Name"
        android:inputType="text"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:textColorHint="#a4acad"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txtAge"
        android:layout_width="295dp"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="410dp"
        android:layout_weight="0.03"
        android:background="#a4acad"
        android:backgroundTint="#c7e4e8"
        android:drawableLeft="@drawable/shape_02"
        android:drawablePadding="16dp"
        android:ems="10"
        android:hint="Patient Age"
        android:inputType="text"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:textColorHint="#a4acad"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="295dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="480dp"
        android:layout_weight="0.03"
        android:background="#a4acad"
        android:backgroundTint="#c7e4e8"
        android:drawableLeft="@drawable/shape_02"
        android:drawablePadding="16dp"
        android:ems="10"
        android:hint="Patient Status"
        android:inputType="text"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:textColorHint="#a4acad"
        android:textSize="16sp" />

    <Button
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="4dp"
        android:text="Home" />


</RelativeLayout>