<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".edit_patient">

    <TextView
        android:layout_width="308dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:drawableLeft="@drawable/ic_add_box_black_24dp"

        android:text="Add New Patient"
        android:textAlignment="center"
        android:textColor="#3b5b8e"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/patientID"
        android:layout_width="match_parent"
        android:layout_height="48dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="13dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="50dp"
        android:layout_weight="0.03"
        android:background="#a4acad"
        android:backgroundTint="#c7e4e8"
        android:drawableLeft="@drawable/shape_02"
        android:drawablePadding="16dp"
        android:ems="10"
        android:hint="Patient ID"
        android:inputType="text"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:textColorHint="#a4acad"
        android:textSize="16sp"



        />

    <EditText
        android:id="@+id/patientFirst"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="50dp"
        android:layout_weight="0.03"
        android:background="#a4acad"
        android:backgroundTint="#c7e4e8"
        android:drawableLeft="@drawable/shape_02"
        android:drawablePadding="16dp"
        android:ems="10"
        android:hint="First Name"
        android:inputType="text"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:textColorHint="#a4acad"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/patientLast"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="215dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="50dp"
        android:layout_weight="0.03"
        android:background="#a4acad"
        android:backgroundTint="#c7e4e8"
        android:drawableLeft="@drawable/shape_02"
        android:drawablePadding="16dp"
        android:ems="10"
        android:hint="Last Name"
        android:inputType="text"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:textColorHint="#a4acad"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="280dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="50dp"
        android:layout_weight="0.03"
        android:background="#a4acad"
        android:backgroundTint="#c7e4e8"
        android:drawableLeft="@drawable/ic_call_black_24dp"
        android:drawablePadding="16dp"
        android:ems="10"
        android:hint="Phone Number"
        android:inputType="text"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:textColorHint="#a4acad"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/age"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="340dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="50dp"
        android:layout_weight="0.03"
        android:background="#a4acad"
        android:backgroundTint="#c7e4e8"
        android:drawableLeft="@drawable/ic_cake_black_24dp"
        android:drawablePadding="16dp"
        android:ems="10"
        android:hint="Age"
        android:inputType="text"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:textColorHint="#a4acad"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/pass"
        android:layout_width="match_parent"
        android:layout_height="48dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="50dp"
        android:layout_weight="0.03"
        android:background="#a4acad"
        android:backgroundTint="#c7e4e8"
        android:drawableLeft="@drawable/shape_03"
        android:drawablePadding="16dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="text"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:textColorHint="#a4acad"
        android:textSize="16sp" />

    <Button
        android:id="@+id/addPatient"
        android:layout_width="191dp"
        android:layout_height="62dp"
        android:layout_alignStart="@+id/phone"
        android:layout_alignLeft="@+id/phone"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="490dp"
        android:background="@drawable/rectangle_3"
        android:clickable="true"
        android:onClick="addNewPatient"
        android:padding="16dp"
        android:text="Add New Patient"
        android:textAllCaps="true"
        android:textColor="#fff"
        android:textSize="18sp" />

    <Button
        android:id="@+id/exit"
        android:layout_width="125dp"
        android:layout_height="61dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="490dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/rectangle_3"
        android:clickable="true"
        android:padding="16dp"
        android:text="Home"
        android:textAllCaps="true"
        android:textColor="#fff"
        android:textSize="18sp" />


</RelativeLayout>